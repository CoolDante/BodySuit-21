<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="@drawable/background"
      
     >

<RelativeLayout
    android:id="@+id/linearbutton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@drawable/header" >

    <ImageView
        android:id="@+id/icon"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:background="@drawable/icon"
         />

    <ImageView
        android:id="@+id/bodybuilderh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/icon"
        android:background="@drawable/bodybuilderh" />

</RelativeLayout>

<RelativeLayout
    android:id="@+id/takephoto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/linearbelow"
        android:layout_below="@+id/linearbutton">
     <RelativeLayout
        android:id="@+id/imageholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        >
        
         
    
</RelativeLayout>

<RelativeLayout
    android:id="@+id/photolinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/imageholder"
    android:orientation="vertical" >

        <ImageView
            android:id="@+id/photobfix"
            android:layout_width="182dp"
            android:layout_height="206dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/q"
            android:scaleType="centerInside" />

  </RelativeLayout>
  </RelativeLayout>
       <RelativeLayout
        android:id="@+id/relativemainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearbelow"
        android:layout_below="@+id/linearbutton"
        >

           <ImageView 
               android:id="@+id/changebg"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:layout_alignParentLeft="true"
               android:clickable="true"
               android:onClick="changebackground"
               android:background="@drawable/backgs"
               />
        <GridView
            android:id="@+id/facegridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numColumns="2"
            android:padding="10dp" />

        <ToggleButton
            android:id="@+id/switchbody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:focusable="false"
            android:textOff=""
            android:textOn=""
            android:focusableInTouchMode="false"
            android:background="@drawable/toggles" />
    
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearbelow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
       
        
         >
<LinearLayout 
    android:id="@+id/linearmain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    
    >
        <ImageView
            android:id="@+id/photomove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher"
            android:clickable="true"
            android:visibility="gone"
            
            android:onClick="onClick" />
        <ImageView 
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:onClick="onClick"
            android:background="@drawable/saves"/>
        
        </LinearLayout>
        
 

 <ImageView
     android:id="@+id/share"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentRight="true"
     android:layout_alignParentTop="true"
    
     android:background="@drawable/shares"
     android:clickable="true"
     android:onClick="onClick" />

 <ImageView
     android:id="@+id/body"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentTop="true"
     android:layout_centerHorizontal="true"
    
     android:background="@drawable/bodys"
     android:clickable="true"
     android:onClick="onClick" />
        
    </RelativeLayout>
   

  
    
</RelativeLayout>
